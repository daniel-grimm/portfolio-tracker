{
  "name": "vibefolio",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=server\" \"npm run dev --workspace=client\"",
    "build": "npm run build --workspace=shared && npm run build --workspace=server && npm run build --workspace=client",
    "typecheck": "tsc -p shared/tsconfig.json && tsc --noEmit -p server/tsconfig.json && tsc --noEmit -p client/tsconfig.app.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:generate": "npm run db:generate --workspace=server",
    "db:migrate": "npm run db:migrate --workspace=server",
    "db:studio": "npm run db:studio --workspace=server"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.3.15",
    "@types/pg": "^8.16.0",
    "@vitest/coverage-v8": "^3.0.5",
    "concurrently": "^9.1.2",
    "pg": "^8.18.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  }
}
